<%- await include(`${Deno.cwd()}/views/common/header.ejs`, {
  pathname,
  title,
  text
}) %>
<style>
  * {
  margin: 0;
  padding: 0;
  }

  /* Title */
  h1 {
    font-size: 3rem;
    line-height: 3.4rem;
    font-weight: 200;
    position: relative;
    padding-bottom: 12px;
    padding-left: 2px;
    cursor: default;
  }

  h1:before{
    content: "";
    display: block;
    position: absolute;
    bottom: 0px;
    left: 2px;
    width: 100%;
    height: 10px;
    background-color: #f9f002;
    clip-path: polygon(0px 0px, 85px 0px, 90px 5px, 100% 5px, 100% 6px, 85px 6px, 80px 10px, 0px 10px);
  }

  h1:after {
    content: "_";
    animation-name: hxafter;
    animation-duration:  0.9s;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
  }
  @keyframes hxafter {
    0% {
      opacity: 0;
    }
    50% {
      opacity: 0;
    }
    51% {
      opacity: 1;
    }
    100% {
      opacity: 1;
    }
  }
</style>
<div class="container">
        <h1 class="actions"><a href="/"><%= title %></a></h1>
        <article>
            <div><a href="<%= text.url %>" target="_blank"><%= text.word %></a><button class="button-3d-2" onclick="window.location.reload()">刷新</button></div>
        </article>
        <footer>
